<div class="container">
    <div class="jumbotron">
        <h1>Lets Eat Some Burgers</h1>
        <p>Make the Burger. Eat the Burgers.</p>
        <h2>Make Your Burger</h2>
        <panal>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Order a Fresh Burger</label>
                    <input type="text" id="newburger" name="burger">
                    <button type="submit" class="btn btn-success" id="addburger">
                        <span class="fa fa-thumbs up">Submit!</span>
                    </button>
                </div>
            </form>
        </panal>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="leftside"><strong>Your Ordered Burger</strong>
                
            </div>
            <div class="panel-body">

                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}

                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span>Devour</span></button>
                    <hr>
                    {{/unless}}
                    {{/each}}
                </ul>

            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="rightside"><strong>Burger is Devoured</strong>
               
            </div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                    <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span>Remove</span></button>
                    <hr>
                    {{/if}}
                    {{/each}}
                </ul>



            </div>
        </div>
    </div>

</div>
<!--endrow -->
</div>